<% i=0 %>
<% @restaurant.reviews.each { |review| i += review.rating } %>
<% rating = (i.to_f/@restaurant.reviews.size).round(1) %>

<h2><%= @restaurant.name %> (<%= rating %> out of 5)</h2>
<%= link_to "See all restaurants", restaurants_path, class:"btn btn-primary" %>
<br>
<br>
<p>Cuisine: <%= @restaurant.category %> food</p>
<p>Phone: <%= @restaurant.phone_number %></p>
<p>Address: <%= @restaurant.address %></p>
<br>
<h3>Reviews</h3>
<hr>
<% @restaurant.reviews.each do |review| %>
<p>Rating: <%= review.rating %> </p>
<p>Comment: <%= review.content %></p>
<hr>
<% end %>
<%= link_to "Add a review to #{@restaurant.name}", new_restaurant_review_path(@restaurant), class:"btn btn-danger btn_block" %>

